{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "singleQuote": true,
  "importOrder": [
    "^react",
    "^next",
    "<THIRD_PARTY_MODULES>",
    "@/auth",
    "^@/app/(.*)$",
    "^@/components/(.*)$",
    "^@/actions/(.*)$",
    "^@/utils/(.*)$",
    "^@/lib/(.*)$",
    "^@/hooks/(.*)$",
    "^@/data/(.*)$",
    "^@/contexts/(.*)$",
    "^@/types/(.*)$",
    "^@/assets/(.*)$",
    "^./(.*)$",
    "^../(.*)$"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
